<body>
    
<div class = "index">
    <img id ="bg" src="/image/BG-HUST.jpg">
    <div class = "Khung">
        <div class = "anh"> <img src="/image/Hust.jpg"></div>
        
            <span class="login100-form-title">
              <b>QUÊN MẬT KHẨU</b>
            </span>
                  <form action="/login/forgot" method="POST">
                      <div class="wrap-input100 validate-input">
                          <span><i class="far fa-user"></i></span>
                          <input class="input100" type="text" placeholder="Tài khoản" name="username"
                              id="username" required>
                              <label for="username" id='noti'></label>
  
                      </div>
                      <div class="wrap-input100 validate-input">
                          <span><i class="fas fa-envelope"></i></span>
                          <input autocomplete="off" class="input100" type="email" placeholder="Email"
                              name="email" id="email" required>
                          
                          </span>
                          <span class="focus-input100"></span>
                          
                      </div>
                      <!--=====LINK TÌM MẬT KHẨU======-->
                      <div class="text-right">
                          <a class="txt2" href="/login">
                              Đăng nhập
                          </a>
                      </div>
  
                      <!--=====ĐĂNG NHẬP======-->
                      
                      <div class="container-login100-form-btn">
                          <button type="submit" id='loginBtn'>Xác nhận</button>
                      </div>
                  </form>
                
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<script type="text/javascript">
    
    // const usernameInput = document.getElementById('username');
