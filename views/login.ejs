                          <a class="txt2" href="/login/forgot">
                              Quên mật khẩu
                          </a>
                      </div>
  
                      <!--=====ĐĂNG NHẬP======-->
                      
                      <div class="container-login100-form-btn">
                          <button type="submit" id='loginBtn' >Đăng nhập</button>
                      </div>
                  </form>
                
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

<script type="text/javascript">
    //show - hide mật khẩu
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text"
        } else {
            x.type = "password";
        }
    }
    $(".click-eye").click(function () {
        $(this).toggleClass("bx-show bx-hide");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });
    const validate = (field,input) =>{
        if(field === 'name'){
            if(input.length < 5) return false
        }
        return true
    }

    const usernameInput = document.getElementById('username');
    const noti = document.getElementById('noti');
    const loginBtn = document.getElementById('loginBtn');
    usernameInput.onchange = function (e){
        console.log(e.target.value);
        let check = validate('name',e.target.value);
        if(!check) noti.innerText = 'qua ngan'
        else noti.innerText=''
    }

    loginBtn.onclick = function(e){
        e.preventDefault();
        if(noti.innerText !== ''){
        alert('loi kia');
            return;
        }
        $.ajax({
            url:'http://localhost:3000/login',
            type:'POST',
            data:{
                username:$('#username').val(),
                password:$('#password').val()
            },
            success: function(response){
                // console.log(response);
                if(response.code === 200){
                    if(response.role === 'admin'){
                        window.location.replace('/admin/admin_home')
                    }
                    if(response.role === 'teacher'){
                        window.location.replace('/teacher/teacherhome')
                    }
                    if(response.role === 'student'){
                        window.location.replace('/student/home')
                    }
                }
                
                if(response.code === 400){
                    alert(response.message);
                    
                }
            }
        })
    }
    
    

</script> 

